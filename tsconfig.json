{
  "extends": "ts-node/node16/tsconfig.json",
  "ts-node": {
    // It is faster to skip typechecking.
    // Remove if you want ts-node to do typechecking.
    "transpileOnly": true, //-> Removing this will do a lib check and result in error while using commonjs module
    "files": true,
   
  },
  
 "compilerOptions": {
   "module": "commonjs",
   "esModuleInterop": true,
   "target": "es6",
   "moduleResolution": "node",
   "sourceMap": true,
   "outDir": "dist",
   "rootDir": "src",
   "declaration": true,
   "types": ["node", "mocha"],
   "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    }
 },
 "lib": ["es2015"],
 "include": ["src/"],
 "exclude": [
     "dist",
     "node_modules",
     "src/**/*.spec.ts"
   ],
}